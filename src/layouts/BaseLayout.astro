---
import HeadCommon from "../components/seo/HeadCommon.astro"
import Header from "../components/Header/Header.astro"
import Footer from "../components/Footer/Footer.astro"
import BaseStyles from "../components/GlobalStyles.astro"
import { SITE } from "../consts.ts"

type Props = {
  title?: string
  description?: string
  class?: string
  image?: string
  imageAlt?: string
  imageWidth?: string
  imageHeight?: string
  nav?: boolean
}

const {
  title,
  class: className,
  description,
  image,
  imageAlt,
  imageHeight,
  imageWidth,
  nav,
} = Astro.props
---

<!doctype html>
<html
  lang="es"
  class:list={[
    "selection:bg-textColor-primary selection:text-background",
    className,
  ]}
>
  <head>
    <HeadCommon
      title={title ?? SITE.TITLE}
      description={description}
      image={image}
      imageAlt={imageAlt}
      imageHeight={imageHeight}
      imageWidth={imageWidth}
    />
    <slot name="meta" />
    <BaseStyles />
  </head>
  <body
    class="bg-background text-textColor-secondary break-words overflow-x-hidden min-h-[40svh]"
  >
    <Header nav={nav} />
    <slot name="header" />
    <main class="px-6 mx-auto">
      <slot />
    </main>
    <Footer />
  </body>
</html>
