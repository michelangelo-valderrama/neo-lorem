---
import katex from "katex"

interface Props {
  f: string
  inline?: boolean
  customClasses?: string
}

const { f, inline = true, customClasses } = Astro.props
const html = katex.renderToString(f, { throwOnError: false })
---

<span class:list={[{ full: !inline }, customClasses]} set:html={html} />

<style>
  .full {
    @apply block text-center my-4 text-textColor-primary overflow-x-scroll;
  }
</style>
