---
interface Props {
  quote: string
  cite: string
  class?: string
}

const { quote, cite, class: className } = Astro.props
---

<div
  class="relative w-[100vw] left-[50%] right-[50%] mx-[-50vw] bg-quotesColor"
>
  <div class="max-w-screen-md mx-auto">
    <blockquote
      class:list={[
        'max-w-screen-sm text-right py-6 pr-4 md:pr-0 rounded-none border-0 my-10 ml-auto p-0',
        className,
      ]}
    >
      <q
        class="italic text-lg md:text-xl text-textColor-primary"
        set:html={quote}
      />
      <div class="mt-4">
        <cite class="text-right text-textColor-secondary" set:html={cite} />
      </div>
    </blockquote>
  </div>
</div>
