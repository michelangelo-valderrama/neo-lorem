---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'a'> {
  title: string
  class?: string
}

const { title, class: className, href, ...attrs } = Astro.props

const { pathname } = Astro.url
const isActive = href === pathname || href === pathname.replace(/\/$/, '')
---

<div>
  <a
    href={href}
    {...attrs}
    class:list={[{ 'font-bold text-textColor-accent': isActive }, className]}
  >
    {title}
  </a>
</div>
