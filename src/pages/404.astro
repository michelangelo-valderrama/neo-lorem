---
import BaseLayout from '../layouts/BaseLayout.astro'
---

<BaseLayout title="404">
  <section class="min-h-screen grid content-center relative">
    <div class="relative">
      <div
        class="absolute w-full h-36 gradient blur-background-effect opacity-25 top-[-10rem] blur-3xl pointer-events-none"
      >
      </div>
      <h1
        class="text-3xl md:text-5xl text-textColor-primary text-center translate-y-[-8rem]"
      >
        <span class="animate-pulse text-textColor-accent">404</span>
        <span class="mx-3">|</span>
         Page Not Found
      </h1>
    </div>
  </section>
</BaseLayout>

<style>
  .gradient {
    background-image: linear-gradient(
      45deg,
      hsl(240deg 100% 20%) 0%,
      hsl(289deg 100% 21%) 11%,
      hsl(315deg 100% 27%) 22%,
      hsl(329deg 100% 36%) 33%,
      hsl(337deg 100% 43%) 44%,
      hsl(357deg 91% 59%) 56%,
      hsl(17deg 100% 59%) 67%,
      hsl(34deg 100% 53%) 78%,
      hsl(45deg 100% 50%) 89%,
      hsl(55deg 100% 50%) 100%
    );
  }
</style>
